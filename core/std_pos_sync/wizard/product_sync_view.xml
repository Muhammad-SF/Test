<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Product Attributes Sync Wizard -->
        <record id="view_manual_product_attrs_sync_wizard" model="ir.ui.view">
            <field name="name">product.attrs.sync.wizard.form</field>
            <field name="model">product.attrs.sync.wizard</field>
            <field name="arch" type="xml">
                <form string="Product Attributes Sync">
                    <group>
                        <span>This action will sync this computer with the master server’s data. Do you want to continue ? </span>
                    </group>
                    <footer>
                       <button name="action_product_attrs_sync" string="Continue" type="object" class="oe_highlight"/>
                       <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        
