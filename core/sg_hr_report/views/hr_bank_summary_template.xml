<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<template id="hr_bank_summary_report_tmp">
			<t t-call="report.html_container">
				<t t-foreach="docs" t-as="o">
					<div class="page">
						<style>
							.padding {
							padding-top:3px;
							padding-bottom:3px;
							padding-left:3px;
							padding-right:3px;
							}
						</style>
						<div>
							<table width="100%">
								<tr>
									<td width="50%" class="text-left padding">
										<strong> Company : </strong>
										<span t-esc="res_company.name" />
									</td>
									<td width="50%" align="right">
										<strong> By Bank</strong>
										<span />
									</td>
								</tr>
								<tr>
									<td width="50%" class="text-left padding">
										<strong> Periods :</strong>
										<span
											t-esc="datetime.datetime.strptime(data.get('start_date','') , '%Y-%m-%d').strftime('%d-%m-%Y')" />
										to
										<span
											t-esc="datetime.datetime.strptime(data.get('end_date','') , '%Y-%m-%d').strftime('%d-%m-%Y')" />
									</td>
								</tr>
								<tr>
									<td width="50%" class="text-left padding">
										<b>
											Total Records :
											<t t-esc="get_totalrecord" />
										</b>
									</td>
								</tr>
							</table>
						</div>
						<br />
						<table class="table table-condensed">
							<thead>
								<tr>
									<th class="text-center">
										Employee Name
							        </th>
									<th class="text-center">
										Employee Login
							        </th>
									<th class="text-center">
										Name Of Bank
							        </th>
									<th class="text-center">
										Account Number
							        </th>
									<th class="text-center">
										Amount
							        </th>
								</tr>
							</thead>
							<tbody>
								<t t-foreach="get_info" t-as="payslip_data">
									<tr t-foreach="payslip_data.get('lines')" t-as="line">
										<td class="text-center">
											<span t-esc="line.get('employee_name', False)" />
										</td>
										<td class="text-center">
											<span t-esc="line.get('employee_id', False)" />
										</td>
										<td class="text-center">
											<span t-esc="line.get('bank_name', False)" />
										</td>
										<td class="text-center">
											<span t-esc="line.get('account_number', False)" />
										</td>
										<td class="text-right">
											<span t-esc="line.get('amount') or 0.00"
												t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
										</td>
									</tr>
									<tr t-foreach="payslip_data.get('departmane_total')" t-as="dept_data">
										<td colspan="3">
											<b>
												<span t-esc="dept_data.get('department_name', False)" />
											</b>
										</td>
										<td colspan="2" class="text-right">
											<b>
												<span t-esc="dept_data.get('total')"
													t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}" />
											</b>
										</td>
									</tr>
								</t>
								<tr>
									<td class="text-left">
										<b>Overall Total</b>
									</td>
									<td>
									</td>
									<td class="hide_border_bottom">
									</td>
									<td class="hide_border_bottom">
									</td>
									<td class="hide_border_bottom">
									</td>
								</tr>
								<t t-foreach="get_info" t-as="payslip_data">
									<tr t-foreach="payslip_data.get('departmane_total')" t-as="dept_data">
										<td class="text-left">
											<b>
												<t t-esc="dept_data.get('department_name',False)" />
											</b>
										</td>
										<td class="text-right">
											<b>
												<t t-esc="dept_data.get('total') or 0.00"
													t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}" />
											</b>
										</td>
										<td class="hide_border_bottom">
										</td>
										<td class="hide_border_bottom">
										</td>
										<td class="hide_border_bottom">
										</td>
									</tr>
								</t>
								<tr>
									<td class="text-left">
										<b>ALL</b>
									</td>
									<td class="text-right">
										<b>
											<t t-esc="get_total or 0.00"
												t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}" />
										</b>
									</td>
									<td class="hide_border_bottom">
									</td>
									<td class="hide_border_bottom">
									</td>
									<td class="hide_border_bottom">
									</td>
								</tr>
							</tbody>
						</table>
					</div>
				</t>
				<!-- </t> -->
			</t>
		</template>
	</data>
</odoo>