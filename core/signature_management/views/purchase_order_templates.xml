<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<template id="report_purchaseorder_document2" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//p[@t-field='o.notes']" position="after">
            <p class="text-right">
                <img t-if="o.signature" class=""  
                    t-att-src="'data:image/png;base64,%s' % o.signature"
                    style="max-height: 45px;"/>
            </p>
        </xpath>
    </template>

</odoo>
