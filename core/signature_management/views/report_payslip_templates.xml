<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<template id="report_payslip2" inherit_id="hr_payroll.report_payslip">
        <xpath expr="//p[@class='text-right']" position="after">
            <p class="text-right">
                <img t-if="o.signature" class=""
                    t-att-src="'data:image/png;base64,%s' % o.signature"
                    style="max-height: 45px;"/>
            </p>
        </xpath>
</template>

</odoo>
